@model Somativa.Models.CompraItem

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>CompraItem</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Compra)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Compra.CompraId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Produto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Produto.ProdutoId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Quantidade)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantidade)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Unitario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Unitario)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" class="btn m-2 text-white" style="background-color:lightseagreen" asp-route-id="@Model.CompraId">
        <svg bootstrap-icon="Pencil" width="16" height="16" aria-label="Editar"></svg>
        Editar
    </a>

    <a asp-action="Index" class="btn m-1 text-white" style="background-color:darkslategrey">
        <svg bootstrap-icon="XCircle" width="16" height="16" aria-label="Cancelar"></svg>
        Cancelar
    </a>
</div>
