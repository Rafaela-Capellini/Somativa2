@model Somativa.Models.VendaItem

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Você tem certaza que quer apagar?</h3>
<div>
    <h4>VendaItem</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Venda)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Venda.VendaId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Produto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Produto.ProdutoId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Quantidade)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantidade)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Unitario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Unitario)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="VendaItemId" />

        <button type="submit" class="btn m-2 text-white" style="background-color:darkslategrey">
            <svg bootstrap-icon="Trash2" width="16" height="16" aria-label="Delete"></svg> Deletar
        </button>

        <a asp-action="Index" class="btn m- 1 text-white" style="background-color:darkslategrey">
            <svg bootstrap-icon="XCircle" width="16" height="16" aria-label="Cancelar"></svg>
            Cancelar
        </a>
    </form>
</div>
